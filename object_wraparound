   if (gameObject.transform.position.x >= (gc.world_map_width * 5) - 20 | gameObject.transform.position.x < -1 * (gc.world_map_width * 5) + 20)
  {
      int wrap_additive_x = -1 * Math.Sign(gameObject.transform.position.x);
      gameObject.transform.position = new Vector3(-1 * (gameObject.transform.position.x + 1 * wrap_additive_x), gameObject.transform.position.y, gameObject.transform.position.z);
  }
  if (gameObject.transform.position.z >= (gc.world_map_length * 5) + 20 | gameObject.transform.position.z < -1 * (gc.world_map_width * 5) - 20)
  {
      int wrap_additive_z = -1 * Math.Sign(gameObject.transform.position.z);
      gameObject.transform.position = new Vector3(-1 * (gameObject.transform.position.x), gameObject.transform.position.y,
                                       gameObject.transform.position.z + 5 * wrap_additive_z);
  }
